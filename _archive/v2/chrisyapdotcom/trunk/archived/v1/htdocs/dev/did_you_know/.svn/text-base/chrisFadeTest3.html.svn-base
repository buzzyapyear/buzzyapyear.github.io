<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/1999/REC-html401-19991224/loose.dtd">
<html>
<head>
	<meta http-equiv="content-type" content="text/html; charset=iso-8859-1">
	<title>content swap test</title>

<style type="text/css">
body { background-color:#cccccc }
#fadeBG { background-color:#FFFFFF; }
</style>

<script type="text/javascript" language="javascript">

//function to change content

// colorfade() partially by Marcio Galli for Netscape Communications.  ////////////
// Modified by Dynamicdrive.com

frame=10;
opa=1;
opaIE=100;

function wait() {
	
	if (navigator.appName=="Microsoft Internet Explorer") {
	alert('IE');
	setTimeout("opacityfadeIE()",1000);
	}
	
	else {
	alert('not IE');
	setTimeout("opacityfade()",1000);
	}
		
}



function opacityfadeIE() {	         	
	// 10 frame fading process
		document.getElementById("fadeBG").filters("alpha").opacity=100;
		if(frame>0) {	
			opaIE-=10;
			document.getElementById("fadeBG").style.filters("alpha").opacity=opaIE;
			frame--;
			setTimeout("opacityfadeIE()",60);	
		}
		else {
			document.getElementById("fadeBG").style.filters("alpha").opacity=0;
		}   

}




function opacityfade() {	         	
	// 10 frame fading process

		if(frame>0) {	
			opa-=.1;
			document.getElementById("fadeBG").style.opacity=opa;
			frame--;
			setTimeout("opacityfade()",60);	
		}
		else {
			document.getElementById("fadeBG").style.opacity=0;
		}
}

</script> 

</head>
<body onload="wait();">


<br>
<div style="position: absolute; left:100px; top:100px;">
	
	<div style="position: absolute;"><img src="bys_images/spacer.gif" width="600" height="400" border="0" id="fadeBG"></div>
	<div style="position: absolute; z-index:2;">Hello</div>

</div>

</body>
</html>
